<div class="@($"alert alert-{Style.ToString()}")" role="alert">
    @ChildContent
</div>

@code{
    public RenderFragment ChildContent { get; set; }

    @*<prop>*@
    public AlertStyle Style { get; set; }
    @*</prop>*@
    @*<enum>*@
    public enum AlertStyle
    {
        primary,
        secondary,
        success,
        danger,
        warning,
        info,
        light,
        dark
    }
    @*</enum>*@
}